{
  "name": "ease-state-helper",
  "displayName": "Ease State Helper",
  "description": "VS Code extension for Ease State Helper - scaffolds ViewModels without build_runner",
  "version": "0.0.1",
  "publisher": "ease",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "flutter",
    "dart",
    "ease",
    "state management",
    "viewmodel"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ease.newViewModel",
        "title": "Ease: New ViewModel"
      },
      {
        "command": "ease.regenerateEaseFile",
        "title": "Ease: Regenerate .ease.dart"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ease.newViewModel",
          "group": "ease@1",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "ease.regenerateEaseFile",
          "group": "ease@2",
          "when": "resourceExtname == .dart && resourceFilename =~ /.*(?<!.ease).dart$/"
        }
      ]
    },
    "snippets": [
      {
        "language": "dart",
        "path": "./snippets/ease.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
